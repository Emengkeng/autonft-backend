generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Deployment {
  id            String   @id
  dropletId     Int?
  serverId      String?
  status        String
  error         String?
  dropletConfig Json
  deployConfig  Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
model TokenAccount{
  id        String   @id @default(cuid()) 
  userId    String   @unique              
  balance   Float    @default(0.0)        
  tier      String?                        
  createdAt DateTime @default(now())       
  updatedAt DateTime @updatedAt 
  transactions TokenTransaction[]
}

model TokenTransaction {
  id        String   @id @default(cuid()) 
  userId    String                           
  amount    Float                            
  type      TransactionType                  
  createdAt DateTime @default(now())         
  tokenAccount TokenAccount @relation(fields: [userId], references: [userId])

  @@index([userId]) 
}

enum TransactionType {
  CREDIT
  DEDUCT
}